
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this account from being saved:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @user do |f| %>
Username: <%=f.text_field :username %><br>
E-mail: <%=f.text_field :email %><br>
Password: <%=f.password_field :password%><br>
Favorite Team: <%=f.text_field :favorite_team %><br>
<%= f.submit %>
<% end %>
